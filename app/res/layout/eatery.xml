<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/eatery_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Eatery" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/eatery_image"
            android:layout_width="54dip"
            android:layout_height="54dip"
            android:layout_margin="2dip"
            android:visibility="visible" />
        <ImageButton
            android:id="@+id/eatery_button_homepage"
            android:layout_width="54dip"
            android:layout_height="54dip"
            android:layout_margin="2dip"
            android:text="Homepage"
            android:src="@drawable/globe"
            android:onClick="onClickGotoHomepage" />
        <ImageButton
            android:id="@+id/eatery_button_map"
            android:layout_width="54dip"
            android:layout_height="54dip"
            android:layout_margin="2dip"
            android:text="Map"
            android:src="@android:drawable/ic_menu_compass"
            android:onClick="onClickGotoMap" />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarStyle="outsideInset">
        <TextView
            android:id="@+id/eatery_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Loading ..."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideInset"
            android:autoLink="all" />
    </ScrollView>
</LinearLayout>